- if @random_tours.present?
  #some-tours
    %ul
    - @random_tours.each do |random|
      %li
        =link_to random.title, tour_path(random), title: random.title
.container
  %h2.centered Хиты продаж
  %ul#hits_of_sales.list-unstyled
    - @hits.each_with_index do |hit, i|
      - if i==1
        - if @nearest.present?
          %li.hit-item.stamp#stampped
            %h3.centered Ближайший автобусный тур
            = link_to image_tag(@nearest.images.first.image.url(:thumb)), tour_path(@nearest)
            %br
            = link_to @nearest.short_title, tour_path(@nearest)
            %br
            = @nearest.price
            = @nearest.description
          %li.hit-item
            = link_to image_tag(hit.images.first.image.url(:thumb)), tour_path(hit)
            %br
            = link_to hit.short_title, tour_path(hit)
            %br
            = hit.price
            = hit.description
      - else
        %li.hit-item
          = link_to image_tag(hit.images.first.image.url(:thumb)), tour_path(hit)
          %br
          = link_to hit.short_title, tour_path(hit)
          %br
          = hit.price
          = hit.description
#we-are-the-best.container
  .row
    .col-md-8
      = render 'layouts/we_are_the_best'
    .col-md-3.pull-left
      = render 'layouts/news'
#articles-part
  = render 'layouts/articles'
  = render 'layouts/best_country'
#countries-part.container
  = render 'layouts/countries'
:javascript
  var articles = document.querySelector('#articles');
  var msnry = new Masonry( articles, {
    // options
    columnWidth: 200,
    itemSelector: '.art-item'
  });
  msnry.unstamp( '#staaaamp' )
:javascript
  var hits_of_sales = document.querySelector('#hits_of_sales');
  var msnry = new Masonry( hits_of_sales, {
    // options
    isFitWidth: true,
    columnWidth: 260,
    itemSelector: '.hit-item'
  });