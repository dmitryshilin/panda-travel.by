.container
  .col-md-9
    %h1 Путешествия
    .article-column
      %ul.list-unstyled
        - @articles.each do |article|
          - if can? :read, article
            %li
              = link_to article.short_title, article_path(article), title: article.short_title
              = raw strip_tags(article.content).truncate(300)
  .col-md-3
    = render 'layouts/news'
    = render 'layouts/best_country'
